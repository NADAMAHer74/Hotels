// JavaScript for Handling Update
function handleUpdateAboutImage(aboutImageId, currentImageUrl) {
  const visibilityInput = document.getElementById(`visible-${aboutImageId}`);
  const visibility = visibilityInput ? visibilityInput.value : null;

  const imageInput = document.getElementById(`image-${aboutImageId}`);
  const imageFile = imageInput.files[0];

  // Prepare the form data
  const formData = new FormData();
  if (visibility !== null) {
    formData.append("visible", visibility);
  }

  // Determine the appropriate API endpoint
  let apiEndpoint;
  if (imageFile) {
    apiEndpoint = `/api/aboutusimages/${aboutImageId}`; // For updating both visibility and image
    formData.append("Image", imageFile);
  } else if (visibility !== null) {
    // If only visibility is being updated
    apiEndpoint = `/api/aboutusimages/visible/${aboutImageId}`;

    // Send visibility in JSON format
    const visibilityData = {
      visible: visibility,
    };

    updateVisibility(apiEndpoint, visibilityData);
    return; // Exit the function after handling the visibility update
  } else if (currentImageUrl) {
    // If only image URL needs to be updated (optional case)
    apiEndpoint = `/api/aboutusimages/image/${aboutImageId}`;
    formData.append("Image", currentImageUrl);
  }
  
  console.log("apiEndpoint", apiEndpoint);
  
  // Proceed to update using the correct endpoint
  if (apiEndpoint) {
    updateAboutImage(apiEndpoint, formData);
  } else {
    alert("No changes to update");
  }
}

function updateAboutImage(apiEndpoint, formData) {
  fetch(apiEndpoint, {
    method: "PUT",
    body: formData,
  })
    .then((response) => {
      if (response.ok) {
        alert("About image updated successfully");
        window.location.reload();
      } else {
        alert("Failed to update the about image");
      }
    })
    .catch((error) => {
      console.error("Error:", error);
    });
}

function updateVisibility(apiEndpoint, visibilityData) {
  fetch(apiEndpoint, {
    method: "put",
    headers: {
      "Content-Type": "application/json",
    },
    body: JSON.stringify(visibilityData),
  })
    .then((response) => {
      if (response.ok) {
        alert("Visibility updated successfully");
        window.location.reload();
      } else {
        alert("Failed to update visibility");
      }
    })
    .catch((error) => {
      console.error("Error:", error);
    });
}



