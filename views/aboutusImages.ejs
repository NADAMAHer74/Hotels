    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.1/dist/js/adminlte.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      function deleteCourse(aboutImageId) {
        if (confirm("Are you sure you want to delete this about image?")) {
          fetch(`/api/aboutusimages/${aboutImageId}`, { method: "DELETE" })
            .then((response) => {
              if (response.ok) {
                window.location.reload();
              } else {
                alert("Failed to delete the about image");
              }
            })
            .catch((error) => {
              console.error("Error:", error);
            });
        }
      }
      //   function updateAboutImage(aboutImageId) {
      //     fetch(`/api/aboutusimages/${aboutImageId}`, { method: "PUT" })
      //       .then((response) => {
      //         if (response.ok) {
      //           window.location.reload();
      //         } else {
      //           alert("Failed to update the about image");
      //         }
      //       })
      //       .catch((error) => {
      //         console.error("Error:", error);
      //       });
      //   }
      function handleUpdateAboutImage(aboutImageId) {
        const visibilityInput = document.getElementById(
          `visible-${aboutImageId}`
        );
        const visibility = visibilityInput ? visibilityInput.value : null;

        const imageInput = document.getElementById(`image-${aboutImageId}`);
        const imageFile = imageInput.files[0];

        if (imageFile) {
          const reader = new FileReader();
          reader.onload = function (event) {
            const imageData = event.target.result; // Base64 image data
            updateAboutImage(aboutImageId, visibility, imageData);
          };
          reader.readAsDataURL(imageFile); // Converts the image to Base64
        } else {
          // If no new image is provided, only send visibility
          updateAboutImage(aboutImageId, visibility, null);
        }
      }

      function updateAboutImage(aboutImageId, visibility, imageData) {
        const data = {
          visibility: visibility,
          image: imageData, // This will be null if no new image is provided
        };

        fetch(`/api/aboutusimages/${aboutImageId}`, {
          method: "PUT",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(data),
        })
          .then((response) => {
            if (response.ok) {
              window.location.reload();
            } else {
              alert("Failed to update the about image");
            }
          })
          .catch((error) => {
            console.error("Error:", error);
          });
      }
    </script>
  </body>
</html>
