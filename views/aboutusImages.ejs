                  <li class="breadcrumb-item"><a href="#">Home</a></li>
                  <li class="breadcrumb-item active">All Courses</li>
                </ol>
              </div>
            </div>
          </div>
        </section>

        <!-- Main content -->
        <section class="content">
          <div class="container-fluid">
            <div class="card card-primary card-outline">
              <div class="card-header">
                <h3 class="card-title">All aboutus Images</h3>
              </div>
              <!-- Table displaying courses -->
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-striped table-sm">
                    <thead>
                      <tr>
                        <th>Images</th>
                        <th>Visible</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% aboutusimages.forEach(aboutimage => { %>
                      <tr>
                        <td>
                          <input
                            type="file"
                            class="form-control-file"
                            id="image-<%= aboutimage.AboutUsImages_ID %>"
                            name="image"
                          />
                          <img
                            src="/<%= aboutimage.Image %>"
                            alt="aboutus Covers"
                            style="width: 150px; margin-top: 10px"
                          />
                        </td>
                        <td>
                          <label>
                            <input
                              type="number"
                              name="visible"
                              id="visible-<%= aboutimage.AboutUsImages_ID %>"
                              value="<%= aboutimage.visible %>"
                            />
                          </label>
                          <p><%= aboutimage.visible %></p>
                        </td>

                        <td>
                          <button
                            class="btn btn-danger btn-sm"
                            onclick="handleUpdateAboutImage('<%= aboutimage.AboutUsImages_ID %>')"
                          >
                            Update
                          </button>
                        </td>
                        <td>
                          <button
                            class="btn btn-danger btn-sm"
                            onclick="deleteCourse('<%= aboutimage.AboutUsImages_ID %>')"
                          >
                            Delete
                          </button>
                        </td>
                      </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>

