function deleteCourse(aboutImageId) {
  if (confirm("Are you sure you want to delete this about image?")) {
    fetch(`/api/aboutusimages/${aboutImageId}`, { method: "DELETE" })
      .then((response) => {
        if (response.ok) {
          console.log("Image deleted successfully");
          window.location.reload();
        } else {
          // Try to read the response as text if it's not JSON
          return response.text().then((text) => {
            console.error("Failed to delete the about image:", text);
            alert("Failed to delete the about image");
          });
        }
      })
      .catch((error) => {
        console.error("Error:", error);
      });
  }
}


