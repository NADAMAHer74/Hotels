        All rights reserved.
        <div class="float-right d-none d-sm-inline">Anything you want</div>
      </footer>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.1/dist/js/adminlte.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document
        .getElementById("editUserToursForm")
        .addEventListener("submit", async function (event) {
          event.preventDefault(); // Prevent the default form submission

          // Get form element
          const form = document.getElementById("editUserToursForm");

          // Create a JSON object from form data
          const formData = {
            user_id: form.user_id.value,

            tour_id: form.tour_id.value,
            adult_quantity: form.adult_quantity.value,
            kids_quantity: form.kids_quantity.value,
            child_quantity: form.child_quantity.value,
            additional_services: form.additional_services.value,
          };

          const userTourId = "<%= user_tour.user_tour_id %>";

          try {
            const response = await fetch(`/api/user_tours/${userTourId}`, {
              method: "PUT",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify(formData),
            });

            if (response.ok) {
              alert("User Tour updated successfully");
              window.location.href = "/api/user_tours"; // Redirect to tours list
            } else {
              const errorData = await response.json();

              // Check if errorData is an array, otherwise handle it as an object
              const errorMessage = Array.isArray(errorData)
                ? errorData.join(", ")
                : errorData.message || JSON.stringify(errorData);

              alert("Failed to update user tour: " + errorMessage);
            }
          } catch (error) {
            console.error("Error:", error);
            alert("An error occurred while updating the user tour");
          }
        });
    </script>
  </body>
</html>
