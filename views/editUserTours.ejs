      <!-- Content Wrapper -->
      <div class="content-wrapper">
        <!-- Content Header -->
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1>All Reservations</h1>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="#">Home</a></li>
                  <li class="breadcrumb-item active">All Reservations</li>
                </ol>
              </div>
            </div>
          </div>
        </section>
        <!-- Main content -->
        <section class="content">
          <div class="container-fluid">
            <div class="card card-primary card-outline">
              <div class="card-header">
                <h3 class="card-title">All Reservations</h3>
              </div>
              <!-- Table displaying courses -->
              <div class="card card-primary card-outline mb-4">
                <div class="card-header">
                  <div class="card-title">Quick Example</div>
                </div>
                <!--begin::Form-->

                <form id="editUserToursForm" enctype="multipart/form-data">
                  <div class="card-body">
                    <div class="mb-3">
                      <div class="form-group">
                        <label for="name">user tour user_id</label>
                        <input
                          type="text"
                          class="form-control"
                          id="user_id"
                          name="user_id"
                          required
                          minlength="1"
                          value="<%= user_tour.user_id %>"
                        />
                      </div>
                    </div>
                    <div class="mb-3">
                      <div class="form-group">
                        <label for="tour_id"> tour_id</label>
                        <input
                          type="text"
                          class="form-control"
                          id="tour_id"
                          name="tour_id"
                          required
                          minlength="1"
                          value="<%= user_tour.tour_id %>"
                        />
                      </div>
                    </div>
                    <div class="mb-3">
                      <div class="form-group">
                        <label for="category"> adult_quantity</label>
                        <input
                          type="text"
                          class="form-control"
                          id="adult_quantity"
                          name="adult_quantity"
                          required
                          minlength="1"
                          value="<%= user_tour.adult_quantity %>"
                        />
                      </div>
                    </div>
                    <div class="mb-3">
                      <div class="form-group">
                        <label for="visible"> kids_quantity</label>
                        <input
                          type="number"
                          class="form-control"
                          id="kids_quantity"
                          name="kids_quantity"
                          required
                          minlength="1"
                          value="<%= user_tour.kids_quantity %>"
                        />
                      </div>
                    </div>

                    <div class="mb-3">
                      <div class="form-group">
                        <label for="image">child_quantity</label>
                        <input
                          type="number"
                          class="form-control"
                          id="child_quantity"
                          name="child_quantity"
                          required
                          minlength="1"
                          value="<%= user_tour.child_quantity %>"
                        />
                        <div class="mb-3">
                          <div class="form-group">
                            <label for="image">additional_services</label>
                            <input
                              type="number"
                              class="form-control"
                              id="additional_services"
                              name="additional_services"
                              required
                              minlength="1"
                              value="<%= user_tour.additional_services %>"
                            />
                          </div>
                        </div>
                      </div>
                    </div>

                    <div class="mb-3">
                      <button type="submit" class="btn btn-primary">
                        Update Reservation
                      </button>
                    </div>
                  </div>
                </form>
                <!--end::Form-->
              </div>
            </div>
          </div>
        </section>
      </div>

      <!-- Footer -->
      <footer class="main-footer">
        <strong
