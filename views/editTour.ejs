            ></a>
          </li>
          <li class="nav-item d-none d-sm-inline-block">
            <a href="/" class="nav-link">Home</a>
          </li>
        </ul>
      </nav>

      <!-- Sidebar -->
      <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <a href="/" class="brand-link">
          <span class="brand-text font-weight-light">AdminLTE 4</span>
        </a>
        <div class="sidebar">
          <nav class="mt-2">
            <ul
              class="nav nav-pills nav-sidebar flex-column"
              data-widget="treeview"
              role="menu"
              data-accordion="false"
            >
              <li class="nav-item">
                <a href="/api/admin/tours" class="nav-link">
                  <i class="nav-icon fas fa-tachometer-alt"></i>
                  <p>Toures</p>
                </a>
              </li>

              <li class="nav-item">
                <a href="/api/admin/destinations" class="nav-link">
                  <i class="nav-icon fas fa-tachometer-alt"></i>
                  <p>Distinations</p>
                </a>
              </li>
              <li class="nav-item">
                <a href="/api/admin/contactus" class="nav-link">
                  <i class="nav-icon fas fa-tachometer-alt"></i>
                  <p>Contact Us</p>
                </a>
              </li>
              <li class="nav-item">
                <a href="/api/admin/aboutus" class="nav-link">
                  <i class="nav-icon fas fa-tachometer-alt"></i>
                  <p>About Us</p>
                </a>
              </li>
              <li class="nav-item">
                <a href="/api/admin/aboutusimages" class="nav-link">
                  <i class="nav-icon fas fa-tachometer-alt"></i>
                  <p>About Us Images</p>
                </a>
              </li>
              <li class="nav-item">
                <a href="/api/admin/blogs" class="nav-link">
                  <i class="nav-icon fas fa-tachometer-alt"></i>
                  <p>Blogs</p>
                </a>
              </li>

              <li class="nav-item">
                <a href="/api/admin/user_tours" class="nav-link">
                  <i class="nav-icon fas fa-tachometer-alt"></i>
                  <p>Reservations</p>
                </a>
              </li>
            </ul>
          </nav>
        </div>
      </aside>

      <!-- Content Wrapper -->
      <div class="content-wrapper">
        <!-- Content Header -->
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1>All Tours</h1>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="#">Home</a></li>
                  <li class="breadcrumb-item active">All Tours</li>
                </ol>
              </div>
            </div>
          </div>
        </section>

        <!-- Main content -->
        <section class="content">
          <div class="container-fluid">
            <div class="card card-primary card-outline">
              <div class="card-header">
                <h3 class="card-title">All Tours</h3>
                <a
                  href="/api/admin/tours/new"
                  class="btn btn-primary float-right"
                  >Add New Tour</a
                >
              </div>
              <!-- Table displaying tours -->
              <div class="card card-primary card-outline mb-4">
                <div class="card-header">
                  <div class="card-title">Quick Example</div>
                </div>
                <!--begin::Form-->

                <form id="editTourForm" enctype="multipart/form-data">
                  <div class="card-body">
                    <div class="mb-3">
                      <div class="form-group">
                        <label for="location">Tour location</label>
                        <input
                          type="text"
                          class="form-control"
                          id="location"
                          name="location"
                          required
                          minlength="5"
                          value="<%= tour.location %>"
                        />
                      </div>
                    </div>

                    <div class="mb-3">
                      <div class="form-group">
                        <label for="name">Tour Name</label>
                        <input
                          type="text"
                          class="form-control"
                          id="name"
                          name="name"
                          required
                          minlength="5"
                          value="<%= tour.name %>"
                        />
                      </div>
                    </div>

                    <div class="mb-3">
                      <div class="form-group">
                        <label for="reviewStars">review Stars</label>
                        <input
                          type="text"
                          class="form-control"
                          id="reviewStars"
                          name="reviewStars"
                          required
                          value="<%= tour.reviewStars %>"
                        />
                      </div>
                    </div>
                    <div class="mb-3">
                      <div class="form-group">
                        <label for="date">Date</label>
                        <input
                          type="text"
                          class="form-control"
                          id="date"
                          name="date"
                          required
                          minlength="5"
                          value="<%= tour.date %>"
                        />
                      </div>
                    </div>
                    <div class="mb-3">
                      <div class="form-group">
                        <label for="time">Time</label>
                        <input
                          type="text"
                          class="form-control"
                          id="time"
                          name="time"
                          required
                          minlength="5"
                          value="<%= tour.time %>"
                        />
                      </div>
                    </div>
                    <div class="mb-3">
                      <div class="form-group">
                        <label for="miniAge">miniAge</label>
                        <input
                          type="text"
                          class="form-control"
                          id="miniAge"
                          name="miniAge"
                          required
                          minlength="5"
                          value="<%= tour.miniAge %>"
                        />
                      </div>
                    </div>
                    <div class="mb-3">
                      <div class="form-group">
                        <label for="maxGusts">maxGusts</label>
                        <input
                          type="text"
                          class="form-control"
                          id="maxGusts"
                          name="maxGusts"
                          required
                          minlength="5"
                          value="<%= tour.maxGusts %>"
                        />
                      </div>
                    </div>
                    <div class="mb-3">
                      <div class="form-group">
                        <label for="languagesSupport">languagesSupport</label>
                        <input
                          type="text"
                          class="form-control"
                          id="languagesSupport"
                          name="languagesSupport"
                          required
                          minlength="5"
                          value="<%= tour.languagesSupport %>"
                        />
                      </div>
                    </div>

                    <div class="mb-3">
                      <div class="form-group">
                        <label for="overview">Overview</label>
                        <textarea
                          class="form-control"
                          id="overview"
                          name="overview"
                          cols="4"
                          rows="6"
                          required
                          minlength="15"
                        >
<%= tour.overview %></textarea
                        >
                      </div>
                    </div>

                    <div class="mb-3">
                      <div class="form-group">
                        <label for="price">Adult Price</label>
                        <input
                          type="number"
                          class="form-control"
                          id="adultPrice"
                          name="adultPrice"
                          required
                          value="<%= tour.adultPrice %>"
                        />
                        <label for="price">Child Price</label>

                        <input
                          type="number"
                          class="form-control"
                          id="childrenPrice"
                          name="childrenPrice"
                          required
                          value="<%= tour.childrenPrice %>"
                        />
                        <label for="price">kids Price</label>

                        <input
                          type="number"
                          class="form-control"
                          id="kidsPrice"
                          name="kidsPrice"
                          required
                          value="<%= tour.kidsPrice %>"
                        />
                      </div>
                    </div>
                    <div class="mb-3">
                      <div class="form-group">
                        <label for="type">Type</label>
                        <input
                          type="string"
                          class="form-control"
                          id="type"
                          name="type"
                          required
                          value="<%= tour.type %>"
                        />
                      </div>
                    </div>
                    <div class="mb-3">
                      <div class="form-group">
                        <label for="tourImage">Tour Cover</label>
                        <input
                          type="file"
                          class="form-control-file"
                          id="tourImage"
                          name="tourImage"
                        />
                        <img
                          src="/<%= tour.tourImage %>"
                          alt="tour Cover"
                          style="width: 150px; margin-top: 10px"
                        />
                      </div>
                    </div>

                    <div class="mb-3">
                      <button type="submit" class="btn btn-primary">
                        Update Tour
                      </button>
                    </div>
                  </div>
                </form>
                <!--end::Form-->
              </div>
            </div>
          </div>
        </section>
      </div>

      <!-- Footer -->
      <footer class="main-footer">
        <strong
          >Copyright &copy; 2014-2024
          <a href="https://adminlte.io">AdminLTE.io</a>.</strong
        >
        All rights reserved.
        <div class="float-right d-none d-sm-inline">Anything you want</div>
      </footer>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.1/dist/js/adminlte.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document
        .getElementById("editTourForm")
        .addEventListener("submit", async function (event) {
          event.preventDefault(); // Prevent the default form submission

          // Get the form element
          const form = document.getElementById("editTourForm");

          // Create a FormData object to handle binary file data
          const formData = new FormData();

          // Append text fields to FormData
          formData.append("location", form.location.value);
          formData.append("name", form.name.value);
          formData.append("reviewStars", form.reviewStars.value);
          formData.append("date", form.date.value);
          formData.append("time", form.time.value);
          formData.append("miniAge", form.miniAge.value);
          formData.append("maxGusts", form.maxGusts.value);
          formData.append("languagesSupport", form.languagesSupport.value);
          formData.append("overview", form.overview.value);
          formData.append("adultPrice", form.adultPrice.value);
          formData.append("childrenPrice", form.childrenPrice.value);
          formData.append("kidsPrice", form.kidsPrice.value);
          formData.append("type", form.type.value);

          // Append the binary image file to FormData
          const tourImageFile = form.tourImage.files[0];
          if (tourImageFile) {
            formData.append("tourImage", tourImageFile); // Attach file in binary format
          }

          const tourId = "<%= tour.tour_id %>";

          try {
            const response = await fetch(`/api/admin/tours/${tourId}`, {
              method: "PUT",
              body: formData, // Send FormData with the image as binary
            });

            if (response.ok) {
              alert("Tour updated successfully");
              window.location.href = "/api/admin/tours"; // Redirect to tours list
            } else {
              const errorData = await response.json();
              const errorMessage = Array.isArray(errorData)
                ? errorData.join(", ")
                : errorData.message || JSON.stringify(errorData);
              alert("Failed to update tour: " + errorMessage);
            }
          } catch (error) {
            console.error("Error:", error);
            alert("An error occurred while updating the tour");
          }
        });
    </script>
  </body>
</html>
