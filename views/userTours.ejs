<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin User Tours</title>

    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />
    <!-- AdminLTE CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/admin-lte@3.1/dist/css/adminlte.min.css"
    />
    <!-- Bootstrap 5 CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>

  <body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
      <!-- Navbar -->
      <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"
              ><i class="fas fa-bars"></i
            ></a>
          </li>
          <li class="nav-item d-none d-sm-inline-block">
            <a href="/" class="nav-link">Home</a>
          </li>
        </ul>
      </nav>

      <!-- Sidebar -->
      <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <a href="/" class="brand-link">
          <span class="brand-text font-weight-light">AdminLTE 4</span>
        </a>
        <div class="sidebar">
          <nav class="mt-2">
            <ul
              class="nav nav-pills nav-sidebar flex-column"
              data-widget="treeview"
              role="menu"
              data-accordion="false"
            >
              <li class="nav-item">
                <a href="/api/admin/tours" class="nav-link">
                  <i class="nav-icon fas fa-tachometer-alt"></i>
                  <p>Toures</p>
                </a>
              </li>

              <li class="nav-item">
                <a href="/api/admin/destinations" class="nav-link">
                  <i class="nav-icon fas fa-tachometer-alt"></i>
                  <p>Distinations</p>
                </a>
              </li>
              <li class="nav-item">
                <a href="/api/admin/contactus" class="nav-link">
                  <i class="nav-icon fas fa-tachometer-alt"></i>
                  <p>Contact Us</p>
                </a>
              </li>
              <li class="nav-item">
                <a href="/api/admin/aboutus" class="nav-link">
                  <i class="nav-icon fas fa-tachometer-alt"></i>
                  <p>About Us</p>
                </a>
              </li>
              <li class="nav-item">
                <a href="/api/admin/aboutusimages" class="nav-link">
                  <i class="nav-icon fas fa-tachometer-alt"></i>
                  <p>About Us Images</p>
                </a>
              </li>
              <li class="nav-item">
                <a href="/api/admin/blogs" class="nav-link">
                  <i class="nav-icon fas fa-tachometer-alt"></i>
                  <p>Blogs</p>
                </a>
              </li>

              <li class="nav-item">
                <a href="/api/admin/user_tours" class="nav-link">
                  <i class="nav-icon fas fa-tachometer-alt"></i>
                  <p>Reservations</p>
                </a>
              </li>
            </ul>
          </nav>
        </div>
      </aside>

      <!-- Content Wrapper -->
      <div class="content-wrapper">
        <!-- Content Header -->
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1>All Reservations</h1>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="#">Home</a></li>
                  <li class="breadcrumb-item active">All Reservations</li>
                </ol>
              </div>
            </div>
          </div>
        </section>

        <!-- Main content -->
        <section class="content">
          <div class="container-fluid">
            <div class="card card-primary card-outline">
              <div class="card-header">
                <h3 class="card-title">All Reservations</h3>
              </div>
              <!-- Table displaying reservations -->
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-striped table-sm">
                    <thead>
                      <tr>
                        <th>user_tour_id</th>

                        <th>user_id</th>
                        <th>tour_id</th>
                        <th>adult_quantity</th>
                        <th>kids_quantity</th>
                        <th>child_quantity</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% user_tours.forEach(usertour => { %>
                      <tr>
                        <td><%= usertour.user_tour_id %></td>

                        <td><%= usertour.user_id %></td>
                        <td><%= usertour.tour_id %></td>
                        <td><%= usertour.adult_quantity %></td>
                        <td><%= usertour.kids_quantity %></td>
                        <td><%= usertour.child_quantity %></td>

                        <td>
                          <a
                            href="/api/user_tours/<%= usertour.user_tour_id %>"
                            class="btn btn-info btn-sm my-2"
                            >View</a
                          >
                          <a
                            href="/api/user_tours/<%= usertour.user_tour_id%>/edit"
                            class="btn btn-warning btn-sm mb-2"
                            >Update</a
                          >
                          <button
                            class="btn btn-danger btn-sm"
                            onclick="deleteReservation('<%=usertour.user_tour_id  %>')"
                          >
                            Delete
                          </button>
                        </td>
                      </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>

      <!-- Footer -->
      <footer class="main-footer">
        <strong
          >Copyright &copy; 2014-2024
          <a href="https://adminlte.io">AdminLTE.io</a>.</strong
        >
        All rights reserved.
        <div class="float-right d-none d-sm-inline">Anything you want</div>
      </footer>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.1/dist/js/adminlte.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      function deleteReservation(userTourId) {
        if (confirm("Are you sure you want to delete this reservation?")) {
          fetch(`/api/userTours/${userTourId}`, { method: "DELETE" })
            .then((response) => {
              if (response.ok) {
                window.location.reload();
              } else {
                alert("Failed to delete the reservation");
              }
            })
            .catch((error) => {
              console.error("Error:", error);
            });
        }
      }
    </script>
  </body>
</html>
